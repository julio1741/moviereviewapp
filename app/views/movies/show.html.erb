<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
        <div class="col-md-5">
          <%= image_tag @movie.image.url(:medium) %>
          <div class="star-rating" data-score= <%= @avg_review %> ></div>
          <em> <%= "#{@reviews.length} reviews" %></em>
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <strong>Title:</strong>
                  </td>
                  <td>
                    <%= @movie.title %>
                  </td>                  
                </tr>
                <tr>
                  <td><strong>Genre:</strong></td>
                  <td><%= @movie.genre %></td>                  
                </tr>
                <tr>
                  <td><strong>Legnth:</strong></td>
                  <td><%= @movie.legnth %></td>
                </tr>
                <tr>
                  <td><strong>Rating:</strong></td>
                  <td><%= @movie.rating %></td>
                </tr>
                <tr>
                  <td><strong>Director:</strong></td>
                  <td><%= @movie.director %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-5 col-offset-1">
          <h1 class="review_title"><%= @movie.title %> </h1>
          <p><%= @movie.description%></p>

          <% if @reviews.blank? %>
            <h3> No reviews just yet. Would yu like to add one?</h3>
            <%= link_to("Write Review", new_movie_review_path(@movie), class: "btn btn-info") %>
          <% else %>
            <% @reviews.each do |review| %>
              <div class="reviews">
                <div class="star-rating" data-score= <%= review.rating %> ></div>
                <p> <%= review.comment %></p>
              </div>
            <% end %>
            <%= link_to("New review",  new_movie_review_path(@movie.id), class: "btn btn-info" ) %> 
          <% end %>
        </div>
    </div>
  </div>
</div>  

<%= link_to ' Back', movies_path, class:" btn btn-primary fa fa-arrow-circle-o-left fa-2x ", style: "color:white" %>

